<% if @my_friends.present? %>
  <div class="row">
    <div class="col-9">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Email</th>
            <th scope="col">Full name</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @my_friends.each do |f| %>
            <tr>
              <td><%= f.email %></td>
              <td><%= f.decorate.full_name %></td>
              <td>
                <%= link_to 'Stop following', friendship_path(f.id), method: :delete, data: { confirm: "Are you sure you want to stop following #{f.decorate.full_name}?" }, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
